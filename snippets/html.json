{
    "div-slds-center": {
        "prefix": "h8sc-html-div-center",
        "body": [
            "<div class=\"slds-align_absolute-center\" style=\"height:5rem\">",
            "   This content will be positioned in the absolute center of its container",
            "</div>"
        ],
        "description": "Lightning Design System CSS for Center Aligning text within a div"
    },

    "grid-col-2": {
        "prefix": "h8sc-html-grid-2-gutters",
        "body": [
            "<div class=\"slds-grid slds-gutters\">",
            "    <div class=\"slds-col\">",
            "        <span>1</span>",
            "    </div>",
            "    <div class=\"slds-col\">",
            "        <span>2</span>",
            "</div>"
        ],
        "description": "Lightning Design System 2 column grid with gutters"
    },

    "grid-col-3": {
        "prefix": "h8sc-html-grid-3-gutters",
        "body": [
            "<div class=\"slds-grid slds-gutters\">",
            "    <div class=\"slds-col\">",
            "        <span>1</span>",
            "    </div>",
            "    <div class=\"slds-col\">",
            "        <span>2</span>",
            "    </div>",
            "    <div class=\"slds-col\">",
            "        <span>3</span>",
            "    </div>",
            "</div>"
        ],
        "description": "Lightning Design System 3 column grid with gutters"
    },


    "lwc-loader": {
        "prefix": "h8sc-lwc-loader",
        "body": [
            "<template if:false={isLoaded}>",
            "    <div class=\"slds-align_absolute-center\" style=\"height:5rem\">",
            "        <lightning-spinner",
            "            alternative-text=\"Loading...\" variant=\"brand\">",
            "        </lightning-spinner>",
            "    </div>",
            "</template>"
        ],
        "description": "LWC Loader Example"
    },

    "lwc-lightningcard": {
        "prefix": "h8sc-lwc-lightningcard",
        "body": [
            "<lightning-card>",
            "   <h1 slot=\"title\">This is a title</h1>",
            "   <lightning-button-group slot=\"actions\">",
            "       <lightning-button label=\"Edit\"></lightning-button>",
            "       <lightning-button label=\"Delete\"></lightning-button>",
            "   </lightning-button-group>",
            "   <div class=\"slds-p-horizontal_small\">Card Body (custom component)</div>",
            "   <div slot=\"footer\">",
            "       <h6>This is the footer</h6>",
            "   </div>",
            "</lightning-card>",
        ],
        "description": "LWC Basic populated lightning card example"
    },

    "lwc-lightningdatatable": {
        "prefix": "h8sc-lwc-datatable",
        "body": [
            "<div style=\"height: 300px;\">",
            "   <lightning-datatable",
            "       key-field=\"id\"",
            "       data={data}",
            "       columns={columns}>",
            "   </lightning-datatable>",
            "</div>"
        ],
        "description": "LWC Datatable Example HTML"
    },

    "lwc-lightningeditform": {
        "prefix": "h8sc-lwc-editform",
        "body": [
            "<template>",
            "    <lightning-record-edit-form record-id={recordId}",
            "                                object-api-name={sObjectName}>",
            "        <lightning-messages>",
            "        </lightning-messages>",
            "        <lightning-output-field field-name=\"AccountId\">",
            "        </lightning-output-field>",
            "        <lightning-input-field field-name=\"FirstName\">",
            "        </lightning-input-field>",
            "        <lightning-input-field field-name=\"LastName\">",
            "        </lightning-input-field>",
            "        <lightning-input-field field-name=\"Email\">",
            "        </lightning-input-field>",
            "        <lightning-button",
            "            class=\"slds-m-top_small\"",
            "            variant=\"brand\"",
            "            type=\"submit\"",
            "            name=\"update\"",
            "            label=\"Update\">",
            "        </lightning-button>",
            "    </lightning-record-edit-form>",
            "</template>"
        ],
        "description": "LWC Record Edit Form Template update record-id and object-api-name"
    }
}